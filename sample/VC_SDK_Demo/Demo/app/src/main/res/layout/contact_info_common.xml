<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/contact_common_relative"
        android:layout_width="match_parent"
        android:layout_height="110sp">

        <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/contact_common_head"
            android:src="@drawable/tree_contact_head"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/contact_common_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="@dimen/dp7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:text="Name"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_weight="2" />

            <EditText
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/contact_name"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/dp10"
                android:maxLines="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/dp7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:text="Phone"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_weight="2" />

            <EditText
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/contact_phone"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:layout_marginRight="@dimen/dp10"
                android:maxLines="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/dp7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:text="MobilePhone"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_weight="2" />

            <EditText
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/contact_mobile_phone"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:layout_marginRight="@dimen/dp10"
                android:maxLines="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/dp7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:text="OfficePhone"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_weight="2" />

            <EditText
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/contact_office_phone"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:layout_marginRight="@dimen/dp10"
                android:maxLines="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/dp7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:text="Email"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_weight="2" />

            <EditText
                android:id="@+id/contact_email"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp10"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:inputType="textEmailSubject"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:text="Address"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_weight="2" />

            <EditText
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/contact_address"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/dp10"
                android:maxLines="1"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>